    <!--Inner Beans Demo  -->
    <bean id="zebra3" class="com.spring.beans.Animal">
        <property name="color">
            <bean class="com.spring.beans.Color">
                <constructor-arg value="BlackAndWhite"/>
                <constructor-arg value="56"/>
            </bean>
        </property>
    </bean>

    <!--Inner Beans Demo 2 -->
    <bean id="zebra4" class="com.spring.beans.Animal">
        <property name="color">
            <bean id="blackAndWhiteInner" class="com.spring.beans.Color">
                <constructor-arg value="BlackAndWhite"/>
                <constructor-arg value="56"/>
            </bean>
        </property>
    </bean>

    <bean id="tiger1" name="Tiger" class="com.spring.beans.Animal2">
        <property name="size">
            <bean class="com.spring.beans.Size">
                <constructor-arg index="0" value="12.6"/>
                <constructor-arg index="1" value="13.4"/>
            </bean>
        </property>
    </bean>
    <!-- idref -->
    <bean id="tiger2" class="com.spring.beans.Animal2">
        <property name="validator">
            <idref bean="tiger3"/>
        </property>
    </bean>

    <bean id="tiger3" class="com.spring.beans.Animal2">
        <property name="size">
            <bean class="com.spring.beans.Size">
                <constructor-arg index="0" value="12.6"/>
                <constructor-arg index="1" value="13.4"/>
            </bean>
        </property>
    </bean>

    <bean id="validatorBean" class="com.spring.beans.BeanValidator">
        <property name="animal1">
            <idref bean="tiger1"/>
        </property>
        <property name="animal2">
            <idref bean="tiger2"/>
        </property>
    </bean>
    <!-- alias -->
    <bean id="validatorBean1" class="com.spring.beans.BeanValidator">
        <property name="animal1">
            <idref bean="tiger1"/>
        </property>
        <property name="animal2">
            <idref bean="tiger2"/>
        </property>
    </bean>
    <alias name="validatorBean1" alias="BeanValidator"/>

    <!-- Collection ref -->
    <bean id="lion" class="com.spring.beans.Animal3">
        <property name="names">
            <list>
                <value>tiger1</value>
                <value>tiger2</value>
            </list>
        </property>
        <property name="setNames">
            <set>
                <value>tiger1</value>
                <value>tiger2</value>
            </set>
        </property>
        <property name="mapNames">
            <map>
                <entry key="1" value="Lion1"/>
                <entry key="2" value="Lion2"/>

            </map>
        </property>
    </bean>

